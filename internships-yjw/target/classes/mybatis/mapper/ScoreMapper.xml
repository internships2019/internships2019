<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ylq.internships.mapper.ScoreMapper">
    <resultMap id="score" type="Score">
        <id property="scoreId" column="score_id" javaType="String"/>
        <result property="wxNo" column="wx_no" javaType="String"/>
        <result property="attanScore" column="attan_score" javaType="Double"/>
        <result property="apprScore" column="appr_score" javaType="Double"/>
        <result property="intagrateScore" column="intagrate_score" javaType="Double"/>
        <result property="scName" column="sc_name" javaType="String"/>
        <association property="scoreStandard" javaType="ScoreStandard">
            <result property="attanPecent" column="attan_percent" javaType="Double"/>
            <result property="apprPecent" column="appr_percent" javaType="Double"/>
        </association>
        <association property="student" javaType="Student">
            <id property="sNo" column="s_no" javaType="String"/>
            <result property="sName" column="s_name" javaType="String"/>
            <result property="sSex" column="s_sex" javaType="String"/>
            <result property="className" column="class_name" javaType="String"/>
        </association>
    </resultMap>

    <select id="getScoreList" resultMap="score">
        SELECT  s.*,st.`s_no`,st.`s_name`,st.`s_sex`,st.`class_name`
        FROM `score` s
        LEFT JOIN student st ON s.`wx_no`=st.`wx_no`
        where s.sc_name=#{sScName} and s_state= '实习中'
    </select>

    <select id="getScoreList2" resultMap="score">
        SELECT  s.*
        FROM `score` s
        LEFT JOIN student st ON s.`wx_no`=st.`wx_no`
        where s.sc_name=#{sScName} and st.s_state= '实习中' and s.intagrate_score!='' and s.appr_score!=''
    </select>

    <select id="getScoreListByName" resultMap="score">
        SELECT  s.*,st.`s_no`,st.`s_name`,st.`s_sex`,st.`class_name`
        FROM `score` s
        LEFT JOIN student st ON s.`wx_no`=st.`wx_no`
        where s.sc_name=#{sScName} and s_state= '实习中' and st.s_name=#{stuName}
    </select>

    <!-- 通过wx号获取学生成绩   -->
    <select id="getScoreByWxNo" resultMap="score">
        select * from score where wx_no=#{wxNo};
    </select>

    <insert id="insertScore">
        INSERT INTO `score` (`wx_no`,`attan_score`,`sc_name` )
        VALUES (#{wxNo}, #{attanScore},#{scName} ) ;
    </insert>

    <update id="updateIntagrateScore" parameterType="Score">
         update score set intagrate_score=#{intagrateScore} where score_id = #{scoreId}
    </update>

    <update id="updateAttanScore2" parameterType="Score">
        update score set attan_score=#{attanScore} where score_id = #{scoreId}
    </update>

    <update id="updateAttanScore" parameterType="Score">
         update score
         <set>
             attan_score=#{attanScore},
             intagrate_score=#{intagrateScore}
         </set>
         where score_id=#{scoreId}
    </update>

</mapper>